@model Linguagens

<h4>
    Atualizar a linguagem
</h4>

<div class="row">
    <form class="col-md-4" asp-action="Update">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label asp-for="Aplicacao" class="control-label"></label>
            <input asp-for="Aplicacao" class="form-control" />
            <span class="text-danger" asp-validation-for="Aplicacao"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lancamento" class="control-label"></label>
            <input asp-for="Lancamento" class="form-control" />
            <span class="text-danger" asp-validation-for="Lancamento"></span>
        </div>
        <div class="form-group">
            <label asp-for="Desenvolvedor" class="control-label"></label>
            <input asp-for="Desenvolvedor" class="form-control" />
            <span class="text-danger" asp-validation-for="Desenvolvedor"></span>
        </div>
        <div class="form-group">
            <label asp-for="Logo" class="control-label"></label>
            <input asp-for="Logo" class="form-control" />
            <span class="text-danger" asp-validation-for="Logo"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Atualizar!" />
            <a class="btn btn-info" asp-controller="Linguagens" asp-action="Index">Voltar!</a>
        </div>

    </form>
</div>
