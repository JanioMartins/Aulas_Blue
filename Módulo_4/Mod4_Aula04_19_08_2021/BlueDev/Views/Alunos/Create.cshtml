@model Alunos



<div class="row">
    <form class="col-md-4" asp-action="Create">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nascimento" class="control-label"></label>
            <input asp-for="Nascimento" class="form-control" />
            <span class="text-danger" asp-validation-for="Nascimento"></span>
        </div>
        <div class="form-group">
            <label asp-for="linguagensId" class="control-label"></label>
            <select asp-for="linguagensId" class="form-control" asp-items="ViewBag.linguagens">
                <option value=""> **SELECIONE**</option>
            </select>

            <span class="text-danger" asp-validation-for="linguagensId"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Criar!" /><br><br>
            <a class="btn btn-info" asp-controller="Alunos" asp-action="Index">Voltar!</a>
        </div>
    </form>
</div>

